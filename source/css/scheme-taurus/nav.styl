@import 'util'

.nav-name a
  text-decoration: none

top_dot_custom_color($color, $offset, $h_offset)
  top_dot($offset, $h_offset)
  &:after
    background-color: $color

top_dot($offset, $h_offset)
  position: relative
  &:after
    position: absolute
    height: 5px
    background-color: #444
    content: ""
    display:block
    width: 5px
    border-radius: 50%
    margin: 0 auto
    top: $offset
    left: $h_offset
    right: 0

top_dot_circle($offset, $h_offset)
  position: relative
  &:after
    position: absolute
    height: 5px
    background-color: white
    border: 2px solid #444
    content: ""
    display:block
    width: 5px
    border-radius: 50%
    margin: 0 auto
    top: $offset
    left: $h_offset
    right: 0

right_dot($offset)
  position: relative
  &:after
    position: absolute
    height: 5px
    background-color: white
    border: 2px solid #444
    content: ""
    display:block
    width: 5px
    border-radius: 50%
    margin: auto 0
    top: 0
    bottom: 0
    left: $offset

#nav
  display: flex
  align-items: center
  justify-content: center
  +for_breakpoint(mobile)
    justify-content: space-around
    width: 100%
    align-content: center
    flex-direction: column
  .nav-item
    padding: 1em 1em
    +for_breakpoint(mobile)
      padding: 0.5em 0.5em
    .nav-icon
    .toc-button
      text-align: center
      vertical-align: text-top
      width: 1.8em
      height: 1.8em
      padding-bottom: 0.4em
      img
        width: 2em
        height: 2em
        object-fit: cover
    .nav-name
      font-size: 1.1em
  
  .nav-more-menu
    background-color: transparent
    position: absolute
    right: 1em
    text-align: left
    padding-top: 4em
    +for_breakpoint(tablet)
      top: 2em
    +for_breakpoint(half-desktop)
      top: 2em
    +for_breakpoint(desktop)
      top: 2em
    +for_breakpoint(mobile)
      fixed_tr(35vh, 0)
      background-color: white
      box-shadow: 0px 0px 10px 1px #ddd
      padding-top: 0
      width: 100%
      height: 14em
      overflow auto
    .nav-more-item
      width: 100%
      padding: 1em 2em
      +for_breakpoint(mobile)
        width: 85vw
        padding: 1em 0em
        padding-left: 15vw
        text-align: left
      background-color: white
      .nav-name:hover
        right_dot(-1.2em)
    
#nav-more-menu-close
  display: none
  +for_breakpoint(mobile)
    float:right
    padding: 0.5em
    font-size: 1.2em
#toc-close
  display: block
  cursor: pointer
  padding: 1em
  +for_breakpoint(desktop)
    float:left
    font-size: 1.4em
  +for_breakpoint(mobile)
    float:right
    font-size: 1.2em

.nav-more-menu
  display: none

#nav-item-more
  position: relative
  display: inline-block

#nav-item-more:hover .nav-more-menu
  display: block

