@import '../fonts'
.article
.page
  max-width: 800px
  margin: 0 auto
  +for_breakpoint(tablet)
    width: 800px
  +for_breakpoint(mobile)
    width: 80%
    margin: 0 0 0 6%
  padding: 0
  margin-top: 10em
  +for_breakpoint(mobile)
    margin-top: 7em
  .article-title
    display: inline-block
    margin: 0
    serif()
  .article-logo
    display: inline-block
    +for_breakpoint(mobile)
      display: none
    height: inherit
    img
      width: auto
      height: 3em
      margin-right: 0.5em
      margin-bottom: -0.8em
  .article-categories
    vertical-align: top
    display: inline-block
    margin: 0
    padding: 0
    margin-left: 0.1em
    padding-right: 0.3em
    +for_breakpoint(mobile)
      display: block
      margin-top: 0.5em
    li
      list-style-type: none
    img
      width: 1.5em
      height: auto
  .article-meta
    clear:both
    color: #666
    margin-left: 2.7em
    +for_breakpoint(mobile)
      margin-left: 0.1em
      margin-top: 2.5em
    margin-top: 3em
    font-size: 0.8em
    width: 100%
    .thumb-up-button
    #toc-button
      cursor pointer
    .comment-button
      a:link
        color: #666
    ul
      display: block
      padding: 0
      text-align: center
      li
        display: inline-block
        list-style-type: none
        margin-right: 1em
        margin-top:0.5em
    .tags
        clear: both
        justify-content: center
  .article-cards
    margin: 0 auto
    margin-top: 1.5em
    width: 100%
    +for_breakpoint(tablet)
      width: 100%
      justify-content: center
      padding: 0
    +for_breakpoint(mobile)
      width: 100%
      justify-content: center
      padding: 0
    display: flex
    align-items: center
    justify-content: space-between
    flex-direction: row
    flex-wrap: wrap
  .article-toc
    fixed_tl(10em, 25vw)
    background-color: white
    z-index: 101
    .toc-button
      z-index: 0
      img
        width: 2em
        height: auto
        object-fit: cover
.page
  max-width: 800px
  .page-meta
    float:right
    p
      margin: 0

.toc-container
  position: relative
  fixed_tr(20vh, 0)
  +for_breakpoint(mobile)
    fixed_tr(30vh, 0)

.toc-container
  display: none
  margin-top: 0
  margin-bottom: 0
  max-width: 350px
  background-color: white
  box-shadow: 0px 0px 10px 3px #ddd
  font-size:0.9em
  +for_breakpoint(mobile)
    width: 100%
    max-width: 100%
    box-shadow: 0px 0px 10px 3px #ddd
  .toc
    overflow: auto
    padding-top: 0.5em
    padding-bottom: 0.5em
    max-height: 60vh
    padding-left: 0.5em
    padding-right: 0.5em
    +for_breakpoint(mobile)
      max-height: 15em
      background-color: white
  ol
    background-color: white
    padding-left: 1em
  li
    list-style-type: none
    line-height: 1.5
    background-color: white
    padding: 0
    +for_breakpoint(mobile)
      padding-left: 0.5em

.toc-item
  font-weight: normal;
.toc-level-1
  font-weight: bold;